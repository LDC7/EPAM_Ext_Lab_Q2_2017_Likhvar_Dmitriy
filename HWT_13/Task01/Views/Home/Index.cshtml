@model IEnumerable<Task01.Models.OrderModel>


@{
    ViewBag.Title = "Список заказов";
}

<div class="jumbotron">
    <h1>Список заказов</h1>
    
    <p>
        @Html.ActionLink("Добавить", "Creating", null, new { @class = "openModalView" })
        @*@Task01.Helpers.ButtonHelper.Button("Добавить", "Create")*@
        @*@Task01.Helpers.ButtonHelper.Button("Удалить", new { @class="btn", onclick="Delete()" })*@
    </p>

    <div id="modDialog" class="modal fade">
        <div id="dialogContent" class="modal-dialog"></div>
    </div>

    <table class="table">
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" data-id="@item.OrderID" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Freight)
                </td>
                <td>
                    @Html.ActionLink("Открыть", "Open", new { id = item.OrderID })
                </td>
            </tr>
        }
    </table>

    <p>
        @Html.ActionLink("Добавить", "Creating", null, new { @class = "openModalView" })
    </p>

</div>


@section scripts
{
    @Scripts.Render("~/Scripts/ModalView.js")
}