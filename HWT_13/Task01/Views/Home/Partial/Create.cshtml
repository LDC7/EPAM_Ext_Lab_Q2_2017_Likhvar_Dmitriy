@model Task01.Models.OrderModel


@using (Html.BeginForm(actionName: "Create", controllerName: "Home"))
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header">
            <h4>Добавить Заказ</h4>
        </div>
